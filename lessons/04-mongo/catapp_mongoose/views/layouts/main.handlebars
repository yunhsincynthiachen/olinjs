<script>
function getsorthtml() {
	var color =document.getElementById("colorsort").value;
	console.log(color);
    if (color == ""){
        document.location.href = "/cats/bycolor/nocolor";
    } else {
        document.location.href = "/cats/bycolor/" + color;
    }
}

function getagerange() {
    var agerange =document.getElementById("range_sort").value;
    console.log(agerange);
    if (agerange == ""){
        document.location.href = "/cats/agerange/noage";
    } else {
        document.location.href = "/cats/agerange/" + agerange;
    }
}


</script>